{% extends 'base.html' %}

{% block content %}

<div class="quiz-header">
  <h1>Quizzes</h1>

  <a href="{{ url_for('view_quizzes.quizzes_get') }}" class="btn">Create Quiz</a>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Questions</th>
    <th>Last Modified</th>
    <th>Scores</th>
  </tr>

  {% for quiz in quizzes %}
  <tr>
    <td>{{ quiz.QuizName }}</td>
    <td>{{ quiz.NumberOfQuestions }}</td>
    <td>{{ quiz.LastModified }}</td>
    <td>
      <a href="{{ url_for('view_scores.get_post_scores', quiz_id=quiz.id) }}">
        View Scores
      </a>
    </td>
  </tr>
  {% endfor %}

</table>

{% endblock %}