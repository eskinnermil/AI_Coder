{% extends "base.html" %}

{% block content %}
<h1>Software Programming Quizzes</h1>

<div class="grid">
  {% for quiz in quizzes %}
    <div class="grid-item">
      <a href="#">{{ quiz.name }}</a>
      <span>{{ quiz.questions }}</span>
      <img src="/static/img/quiz.png" alt="Quiz image">
    </div>
  {% endfor %}
</div>

<style>
  .grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    grid-gap: 10px;
    margin: 0 auto;
    width: 80%;
  }

  .grid-item {
    border: 1px solid #ccc;
    padding: 10px;
  }

  .grid-item a {
    color: #333;
    text-decoration: none;
  }

  .grid-item img {
    width: 100%;
  }
</style>

<a href="/create-quiz">Create Quiz</a>
{% endblock %}