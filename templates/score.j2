{% extends "base.html" %}

{% block content %}
<h1>Individual Score</h1>

<table>
    <thead>
        <tr>
            <th>Candidate Name</th>
            <th>Percent Score</th>
            <th>Raw Score</th>
            <th>Time Taken</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>{{ score.candidate_name }}</td>
            <td>{{ score.percent_score }}</td>
            <td>{{ score.raw_score }}</td>
            <td>{{ score.time_taken }}</td>
        </tr>
    </tbody>
</table>

<canvas id="piechart" width="400" height="400"></canvas>

<script>
var ctx = document.getElementById("piechart").getContext("2d");
var data = {
    labels: ["Correct", "Incorrect"],
    values: [{{ score.correct_questions }}, {{ score.incorrect_questions }}],
};
var piechart = new Chart(ctx, {
    type: "pie",
    data: data,
});
</script>

<a href="/scores">View All Scores</a>
{% endblock %}
