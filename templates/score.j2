{% extends 'base.html' %}

{% block content %}

<h1>{{ score.CandidateName if score.CandidateName else 'N/A' }}'s Score Report for Quiz: {{ quiz_name }} </h1>

<div class="report-summary">
  <p>PercentScore: {{ score.PercentScore }}</p>
  <p>RawScore: {{ score.RawScore }}</p>
  <p>TimeTaken: {{ score.TimeTaken }}</p>

  <a href="{{ url_for('view_scores.get_post_scores', quiz_id=quiz_id) }}" class="btn">
    View All Scores
  </a>
</div>


{% endblock %}